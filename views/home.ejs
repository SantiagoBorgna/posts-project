<%- include("partials/header")-%>
    <h1>Home</h1>

    <form action="/" method="post">
        <button type="submit" class="btn btn-primary btn-outline-primary home-button" >Add a post</button>
    </form>

    <p> <%=content%></p>

<% posts.forEach(function (post){%>
    <h1><%= post.title%></h1>
    <%if (post.content.length >= 100){%>
            <p><%= post.content.substring(0, 99) + "...  "%><a href="/posts/<%=post.title%>">Read more</a></p>
    <%} else {%>
            <p><%= post.content%></p>
    <%}%>


<%})%>

<%- include("partials/footer")-%>